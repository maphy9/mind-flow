{
  "expo": {
    "scheme": "mind-flow",
    "name": "mind-flow",
    "slug": "mind-flow",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/logo-light.png",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/logo-light.png",
      "resizeMode": "contain",
      "backgroundColor": "#D5EDD7"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.maphy9.mindflow",
      "googleServicesFile": "./GoogleService-Info.plist",
      "icon": {
        "light": "./assets/images/logo-light.png",
        "dark": "./assets/images/logo-dark.png"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/logo-light.png",
        "backgroundColor": "#D5EDD7"
      },
      "edgeToEdgeEnabled": true,
      "package": "com.maphy9.mindflow",
      "googleServicesFile": "./google-services.json"
    },
    "web": {
      "favicon": "./assets/images/logo-light.png"
    },
    "plugins": [
      "expo-router",
      "@react-native-firebase/app",
      "@react-native-firebase/auth",
      [
        "expo-build-properties",
        {
          "ios": {
            "useFrameworks": "static"
          }
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Allow MindFlow to use your location."
        }
      ],
      "expo-asset",
      [
        "expo-splash-screen",
        {
          "backgroundColor": "#D5EDD7",
          "image": "./assets/images/logo-light.png",
          "dark": {
            "image": "./assets/images/logo-dark.png",
            "backgroundColor": "#2B5743"
          },
          "imageWidth": 200
        }
      ]
    ]
  }
}
